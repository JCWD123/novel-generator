# ========================================
# vLLM 服务 Dockerfile
# ========================================
# 稳定组合 (2025.01):
# - CUDA Runtime: 12.1
# - Python: 3.10
# - PyTorch: 2.1.2 + cu121
# - vLLM: 0.3.3
# - Ubuntu: 22.04
# ========================================

# 基础镜像 - NVIDIA CUDA 12.1 + Ubuntu 22.04
FROM nvidia/cuda:12.1.1-devel-ubuntu22.04

# 设置环境变量
ENV DEBIAN_FRONTEND=noninteractive
ENV LANG=C.UTF-8
ENV LC_ALL=C.UTF-8
ENV TZ=Asia/Shanghai

# Python 环境变量
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# CUDA 环境变量
ENV CUDA_HOME=/usr/local/cuda
ENV PATH=${CUDA_HOME}/bin:${PATH}
ENV LD_LIBRARY_PATH=${CUDA_HOME}/lib64:${LD_LIBRARY_PATH}

# ========================================
# 配置国内镜像源 (加速下载)
# ========================================
RUN sed -i 's@archive.ubuntu.com@mirrors.aliyun.com@g' /etc/apt/sources.list && \
    sed -i 's@security.ubuntu.com@mirrors.aliyun.com@g' /etc/apt/sources.list

# 安装基础依赖
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3.10 \
    python3.10-dev \
    python3.10-venv \
    python3-pip \
    git \
    wget \
    curl \
    vim \
    build-essential \
    ninja-build \
    && rm -rf /var/lib/apt/lists/*

# 设置 Python 3.10 为默认
RUN update-alternatives --install /usr/bin/python python /usr/bin/python3.10 1 && \
    update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.10 1 && \
    update-alternatives --install /usr/bin/pip pip /usr/bin/pip3 1

# 升级 pip 并配置国内镜像源
RUN pip install --upgrade pip setuptools wheel && \
    pip config set global.index-url https://pypi.tuna.tsinghua.edu.cn/simple && \
    pip config set global.trusted-host pypi.tuna.tsinghua.edu.cn

# 复制锁文件（其余依赖），主干包走 wheel（torch/torchvision/vllm）
COPY requirements.vllm.lock /tmp/requirements.vllm.lock

# 预下载 wheel（避免裸 pip install）
ARG TORCH_VERSION=2.4.0
ARG TORCHVISION_VERSION=0.19.0
ARG VLLM_VERSION=0.6.3.post1
RUN mkdir -p /opt/wheels && \
    pip wheel torch==${TORCH_VERSION} --extra-index-url https://download.pytorch.org/whl/cu121 -w /opt/wheels && \
    pip wheel torchvision==${TORCHVISION_VERSION} --find-links /opt/wheels -w /opt/wheels && \
    pip wheel vllm==${VLLM_VERSION} --find-links /opt/wheels -w /opt/wheels

# 安装主干包与其余依赖
RUN pip install --no-cache-dir --no-index --find-links /opt/wheels \
    torch==${TORCH_VERSION} \
    torchvision==${TORCHVISION_VERSION} \
    vllm==${VLLM_VERSION} && \
    pip install --no-cache-dir --no-index --find-links /opt/wheels \
    -r /tmp/requirements.vllm.lock

# ========================================
# 配置工作目录
# ========================================
WORKDIR /app

# 复制应用代码
COPY config.py /app/
COPY vllm_server.py /app/

# 创建模型挂载点
RUN mkdir -p /models

# 暴露端口
EXPOSE 8000

# 健康检查
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# 启动命令
CMD ["python", "vllm_server.py"]

